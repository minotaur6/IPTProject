@using IptProject.Models.Attendance
@model MarkAttendanceVM

@{
    ViewBag.Title = "MarkAttendance";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<h2>Mark Attendance</h2>
<div class="content">
