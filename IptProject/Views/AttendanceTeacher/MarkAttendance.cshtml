                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Teacher Name</label>


                                        @foreach (var item in Model.employees)
                                        {
                                    
                                            <input class="form-control" type="text" placeholder="@item.EmpName" disabled>
                                            
                                        }





                                    </div>
                                </div>
                                <div class="col-md-8">
