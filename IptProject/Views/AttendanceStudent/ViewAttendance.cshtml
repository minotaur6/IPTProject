                                   @foreach (var item in Model)
                                    {
                                        if (item.CourseStatus != "DROP")
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link active" href="#profile" data-toggle="tab">
                                                    <i class="material-icons">menu_book</i> @item.CourseName
                                                    <div class="ripple-container"></div>
                                                </a>
                                                <p> </p>
                                            </li>
                                            
                                        }
                                        
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
